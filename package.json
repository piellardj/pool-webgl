  "devDependencies": {
    "@types/node": "^14.11.1",
    "fs-extra": "^9.0.1",
    "shx": "^0.3.2",
    "ts-loader": "^8.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpage-templates": "github:piellardj/webpage-templates"
  }
}
